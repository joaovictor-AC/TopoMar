{
  "name": "TopoMar Icon Generator",
  "description": "Instructions to generate all necessary icons from your logo",
  "steps": [
    {
      "step": 1,
      "title": "Add your logo",
      "description": "Place your logo in assets/images/logo.png",
      "size": "512x512px or larger",
      "format": "PNG with transparency"
    },
    {
      "step": 2,
      "title": "Option A: Use automatic script",
      "commands": [
        "# Install ImageMagick (if you don't have it)",
        "choco install imagemagick",
        "",
        "# Run the script",
        ".\\scripts\\generate-icons.ps1"
      ]
    },
    {
      "step": 3,
      "title": "Option B: Use online tool",
      "tools": [
        {
          "name": "Favicon Generator",
          "url": "https://www.favicon-generator.org/",
          "description": "Upload your logo and download all sizes"
        },
        {
          "name": "App Icon Generator",
          "url": "https://appicon.co/",
          "description": "Generate icons for iOS and Android"
        },
        {
          "name": "Figma Export",
          "description": "Export directly from Figma in multiple sizes"
        }
      ]
    },
    {
      "step": 4,
      "title": "Option C: From Figma",
      "instructions": [
        "1. Select your logo in Figma",
        "2. Right panel > Export",
        "3. Add these configurations:",
        "   - 1024w → icon.png",
        "   - 2048w → splash.png",
        "   - 200w → splash-icon.png",
        "   - 48w → favicon.png",
        "4. Export All",
        "5. Copy files to assets/images/"
      ]
    }
  ],
  "requiredFiles": [
    {
      "file": "icon.png",
      "size": "1024x1024",
      "usage": "Main app icon"
    },
    {
      "file": "splash.png",
      "size": "2048x2048",
      "usage": "Large image for splash screen"
    },
    {
      "file": "splash-icon.png",
      "size": "200x200",
      "usage": "Logo on splash screen"
    },
    {
      "file": "favicon.png",
      "size": "48x48",
      "usage": "Favicon for web version"
    },
    {
      "file": "android-icon-foreground.png",
      "size": "1024x1024",
      "usage": "Android adaptive icon (foreground)"
    },
    {
      "file": "android-icon-background.png",
      "size": "1024x1024",
      "usage": "Android adaptive icon (background)"
    },
    {
      "file": "android-icon-monochrome.png",
      "size": "1024x1024",
      "usage": "Android monochrome icon"
    }
  ],
  "afterGeneration": [
    "1. Update src/components/Logo/Logo.tsx (uncomment logo lines)",
    "2. Restart the app: npm start -- --clear",
    "3. Verify the logo appears correctly"
  ]
}
